@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using BestCoffeeService.Models
@model IndexViewModel

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" />
<style>
    .glyphicon {
        display: inline-block;
        padding: 0 5px;
    }

    .glyphicon-chevron-right:after {
        content: "\00BB";
    }

    .glyphicon-chevron-left:before {
        content: "\00AB";
    }
</style>

<h1>Список предложений кофе</h1>
<p><a asp-action="Create">Добавить кофе</a></p>
<form method="get">
    <label>Название магазина:  </label>
    <input name="nameCoffeeShop" value="@Model.FilterViewModel.SelectedName" />

    <label>Тип напитка: </label>
    <select name="typeOfCoffee" asp-items="Model.FilterViewModel.TypeOfCoffees"></select>

    <input type="submit" value="Фильтр" />
</form>
<table>
    <tr>
        <th>
            <a asp-action="Index"
               asp-route-sortOrder="@(Model.SortViewModel.NameCoffeeShop)"
               asp-route-name="@(Model.FilterViewModel.SelectedName)"
               asp-route-company="@(Model.FilterViewModel.SelectedTypeOfCoffee)">Название магазина</a>
        </th>
        <th>
            <a asp-action="Index" asp-route-sortOrder="@(Model.SortViewModel.CoffeePrice)"
               asp-route-name="@(Model.FilterViewModel.SelectedName)"
               asp-route-company="@(Model.FilterViewModel.SelectedTypeOfCoffee)">Цена</a>
        </th>
        <th>
            <a asp-action="Index" asp-route-sortOrder="@(Model.SortViewModel.CoffeeRating)"
               asp-route-name="@(Model.FilterViewModel.SelectedName)"
               asp-route-company="@(Model.FilterViewModel.SelectedTypeOfCoffee)">Оценка</a>
        </th>
        <th>
            <a asp-action="Index" asp-route-sortOrder="@(Model.SortViewModel.TypeOfCoffee)"
               asp-route-name="@(Model.FilterViewModel.SelectedName)"
               asp-route-company="@(Model.FilterViewModel.SelectedTypeOfCoffee)">Тип кофе</a>
        </th>
    </tr>
    @foreach (CoffeeShopMenuItem item in Model.CoffeeShopMenuItems)
    {
        <tr>
            <td>@item.NameCoffeeShop</td>
            <td>@item.CoffeePrice</td>
            <td>@item.CoffeeRating</td>
            <td>@item.TypeOfCoffee?.NameTypeOfCoffee</td>
            <td>
                <form asp-controller="Home" asp-action="Delete" method="post" asp-route-id="@item.Id">
                    <input type="submit" value="Удалить" />
                </form>
            </td>
        </tr>
    }
</table>
<p>
    @if (Model.PageViewModel.HasPreviousPage)
    {
        <a asp-action="Index"
       asp-route-page="@(Model.PageViewModel.PageNumber - 1)"
       asp-route-name="@(Model.FilterViewModel.SelectedName)"
       asp-route-company="@(Model.FilterViewModel.SelectedTypeOfCoffee)"
       asp-route-sortorder="@(Model.SortViewModel.Current)"
       class="glyphicon glyphicon-chevron-left">
            Назад
        </a>
    }
    @if (Model.PageViewModel.HasNextPage)
    {
        <a asp-action="Index"
       asp-route-page="@(Model.PageViewModel.PageNumber + 1)"
       asp-route-name="@(Model.FilterViewModel.SelectedName)"
       asp-route-company="@(Model.FilterViewModel.SelectedTypeOfCoffee)"
       asp-route-sortorder="@(Model.SortViewModel.Current)"
       class="glyphicon glyphicon-chevron-right">
            Вперед
        </a>
    }
</p>