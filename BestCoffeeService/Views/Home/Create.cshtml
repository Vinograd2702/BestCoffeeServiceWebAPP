@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using BestCoffeeService.Models
@model BestCoffeeService.Models.CoffeeShopMenuItem
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" />
<h2>Добавить кофе в базу данных</h2>

<form asp-action="Create" asp-controller="home">
    <p>
        <label asp-for="TypeOfCoffee">Тип кофе</label><br />
        <select asp-for="TypeOfCoffeeID" asp-items="ViewBag.TypeOfCoffees"></select>

    </p>
    <p>
        <label asp-for="NameCoffeeShop">Название магазина</label><br />
        <input type="text" asp-for="NameCoffeeShop" />
    </p>
    <p>
        <label asp-for="CoffeePrice">Цена за кофе</label><br />
        <input type="number" asp-for="CoffeePrice" />
    </p>
    <p>
        <label asp-for="CoffeeRating">Оценка приготовленного кофе</label><br />
        <input type="number" asp-for="CoffeeRating" />
    </p>
    <p>
        <input type="submit" value="Отправить" />
    </p>
</form>